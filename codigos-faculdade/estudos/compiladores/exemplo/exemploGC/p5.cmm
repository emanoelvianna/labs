int num;
int cont;
int result;

void main() {
   while (true) {
    		write("Informe um numero: ");
    		read( num );
 

         if (num == 7) break;
    		cont = 1;
    		result = 0;

    		while ( num+1 > cont ) {
        	  result = result + cont;
        	  cont = cont + 1;
       	}

    		write("Valor do somatorio(1..num): ", result);
    		
    }
 }

